{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "strict": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "types",
    "lib": ["es2017", "dom"]
  },
  "include": ["src/index.ts"]
}
